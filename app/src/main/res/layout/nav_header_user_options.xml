<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5d5b5b"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/user_Photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingTop="10dp"
        android:background="#FFFFFFFF"
        android:padding="3dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Full Name"
        android:textColor="#FFFFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingLeft="25dp"
        android:id="@+id/user_FullName"
        android:layout_below="@+id/user_Photo"
        android:layout_alignStart="@+id/user_Photo"
        android:layout_marginTop="33dp" />

    <TextView
        android:id="@+id/user_UpdateProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#FFFFFFFF"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:text="Update Profile"
        android:layout_above="@+id/user_Filter"
        android:layout_alignStart="@+id/user_FullName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Filter"
        android:textSize="20dp"
        android:paddingLeft="15dp"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        android:id="@+id/user_Filter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="144dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFFFF"
        android:textColor="#5d5b5b"
        android:layout_alignStart="@+id/user_UpdateProfile"
        android:layout_marginBottom="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="History"
        android:textSize="20dp"
        android:paddingLeft="15dp"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        android:id="@+id/textView4"
        android:layout_above="@+id/user_UpdateProfile"
        android:layout_marginBottom="12dp"
        android:layout_alignStart="@+id/user_UpdateProfile" />


</RelativeLayout>
